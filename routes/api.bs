import express
import bailey

router = express.Router()

router.post('/parse', (req, res) ->
    bs = req.param('bs')
    if bs
        try
            res.json(200, { code: bailey.parseString(bs, { bare: true })})
        catch e
            res.json(400, { error: e })
    else
      res.json(400, { error: 'No content provided.'})
)

export router
